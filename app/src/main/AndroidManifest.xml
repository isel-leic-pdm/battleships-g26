<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.battleships.BattleshipsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Battleships"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.example.battleships.game.GameActivity"
            android:exported="true"
            android:theme="@style/Theme.Battleships">

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name="com.example.battleships.auth.AuthActivity"
            android:exported="true"
            android:theme="@style/Theme.Battleships">

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name="com.example.battleships.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Battleships">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.battleships.info.InfoActivity"
            android:exported="true"
            android:theme="@style/Theme.Battleships">

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name="com.example.battleships.rankings.RankingsActivity"
            android:exported="true"
            android:theme="@style/Theme.Battleships">

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name="com.example.battleships.user.UserActivity"
            android:exported="true"
            android:theme="@style/Theme.Battleships">

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

    </application>

</manifest>